@{
    Layout = "_Layout";
}

@model Vendor

<h4>New Vendor Form</h4>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.name, "Vendor Name")
        @Html.TextBoxFor(model => model.name, new {@class = "form-control", @placeholder = "Magic Johns Flour"})<br/>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.description, "Vendor Description")
        @Html.TextBoxFor(model => model.description, new {@class = "form-control", @placeholder = "A Flour Seller"})<br/>
    </div>
    <input type="submit" value="Add new vendor" class="btn btn-primary" />
    @Html.ActionLink("Show all Vendors", "Index")
}