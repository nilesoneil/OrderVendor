@model Vendor

@{
    Layout = "_Layout";
    ViewData["Title"] = @Model.name;
}

<div>
    <div class="container-fluid">
        <div class="row">
            <h1 class="display-2">@Model.name</h1>
        </div>
        <div class="row">
            <div class="col-sm">
                Description:
                @Model.description
            </div>
            <div class="col-sm">
            </div>
        </div>
        <div class="row">
            <div class="col-7">
                <h1 class="display-3">Orders</h1>
                @if (Model.orders.Count > 0)
                {
                    <table class="table">
                        <thead class="thead-dark">
                        <tr>
                            <th>Title</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Date</th>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in @Model.orders)
                        {
                            <tr>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>
                                <td>@item.Date</td>
                            </tr>
                        }
                        </tbody>
                    </table>
                }
                else
                {
                    <div>
                        No orders created yet!
                    </div>
                }
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Add New Order", "CreateOrder", new {vendorId = Model.id})
    </div>
</div>