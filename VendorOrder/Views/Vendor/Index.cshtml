@{
    Layout = "_Layout";
}
@model List<Vendor>
<!DOCTYPE html>
<div>
    @if(Model.Count >0) {
        <table class="table">
            <thead class="thead-dark">
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Details Link</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in @Model)
            {
                <tr>
                    <td>@item.name</td>
                    <td>@item.description</td>
                    <td>@Html.ActionLink("Details", "Details", new {vendorId = item.id})</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div>
            No vendors yet!
        </div>
    }
    <div>
        @Html.ActionLink("Add New Vendor", "Create")
    </div>
</div>